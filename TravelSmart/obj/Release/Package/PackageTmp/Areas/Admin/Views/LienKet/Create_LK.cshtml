@model TravelSmart.Models.LIENKET
@{
    ViewBag.Title = "Create_LK";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}


<h2>THÊM GIAN LIÊN KẾT</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Create_LK", "LienKet", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên Gian Liên Kết</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTen_LK" value="@ViewBag.Ten_LK" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Điện Thoại</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDienThoai" value="@ViewBag.DienThoai" required />
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Ảnh bìa</label>
        <div class="col-md-10">
            <input type="file" name="fFileUpload" />
            @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
            @ViewBag.ThongBao
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sEmail" value="@ViewBag.Email" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa Chỉ</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" value="@ViewBag.DiaChi" required />
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm Mới" class="btn btn-default" />
        </div>
    </div>
</div>
}
