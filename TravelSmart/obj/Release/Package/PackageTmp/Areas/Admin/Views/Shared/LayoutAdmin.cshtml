</head>
<body>
    <nav class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapse" data-toggle="collapse"
                        data-target="#navAdmin" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">TravelSmartAdmin </a>

            </div>
            <div class="collapse navbar-collapse" id="navAdmin">
                <ul class="nav navbar-nav right">
                    <li><a href="@Url.Action("Index","DiaDiem")">QUẢN LÝ ĐỊA ĐIỂM</a> </li>
                    <li><a href="@Url.Action("Index","LienKet")">QUẢN LÝ GIAN LIÊN KẾT</a> </li>
                    <li><a href="@Url.Action("IndexTour","Tour")">QUẢN LÝ TOUR DU LỊCH</a> </li>
                    <li><a href="@Url.Action("IndexKH","KhachHang")">QUẢN LÝ KHÁCH HÀNG</a> </li>
                    <li><a href="@Url.Action("Index_DonHang","DonHang")">QUẢN LÝ ĐƠN HÀNG</a> </li>
                    <li><a href="@Url.Action("DangXuat","Home")"><span class="glyphicon glyphicon-log-out"></span>Đăng Xuất</a></li>

                </ul>

            </div>

        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="container well">
        <div style="text-align:center;">
            <p>ADMIN</p>
        </div>
    </footer>
</body>
</html>
