@model IEnumerable<TravelSmart.Models.HOTEL>
@{
    ViewBag.Title = "LUUTRU";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="~/CSS/index.css" rel="stylesheet" />
<h2>LƯU TRÚ </h2>

<div class="row-test-center">
    @foreach (var hotel in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="border">
                <div class="product-top">
                    <img src="~/Images/LuuTru/@hotel.Anh_Bia" />

                    <div class="tendd text-center">
                        <h3>
                            <a href="@Url.Action("ChiTietLUUTRU","Travel", new { id = hotel.Ma_HOTEL })">

                                @hotel.Ten_HOTEL
                            </a>
                        </h3>
                    </div>
                    <a href="@Url.Action("ChiTietLUUTRU","Travel", new { id = hotel.Ma_HOTEL })" class="xem-ngay">XEM THÊM</a>
                </div>
            </div>



        </div>}
</div>

