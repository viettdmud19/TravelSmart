@*Khai báo để sử dụng chức năng phân trang*@
@using TravelSmart.Models
@using PagedList.Mvc;
@model PagedList.PagedList<TravelSmart.Models.LIENKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}





<h2 style="text-align:center">QUẢN LÝ THÔNG TIN LIÊN KẾT</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create_LK")
</p>
<table class="table">
    <tr>
        <th style="text-align:center; width:140px">
            Tên Liên Kết
        </th>
        <th style="text-align:center; width:80px">
            Số điện thoại
        </th>
        <th style="text-align:center; width:80px">
            @Html.DisplayNameFor(model => model.First().Anh_LK)
        </th>
        <th style="text-align:center; width:140px">
            Email
        </th>
        <th style="text-align:center; width:140px">
            Địa chỉ
        </th>
        <th style="text-align:center"></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>

        @item.Ten_LK
    </td>
    <td>
        @item.DienThoai
    </td>
    <td>
        <img src="~/Images/LienKet/@item.Anh_LK" style="width:100px;" />
    </td>
    <td>
        @item.Email
    </td>
    <td>
        @item.DiaChi
    </td>


    <td>
        <a href="@Url.Action("EditLK","LienKet", new { id = item.Ma_LK })" class="btn btn-warning" role="button">Sửa</a>
        <a href="@Url.Action("Detail_LK","LienKet", new { id = item.Ma_LK })" class="btn btn-primary" role="button">Chi tiết</a>
        <a href="@Url.Action("DeleteLK","LienKet", new { id = item.Ma_LK })" class="btn btn-danger" role="button">Xóa</a>
    </td>
</tr>
    }

</table>
@*Tạo liên kết các trang*@
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>



