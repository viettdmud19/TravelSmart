@model TravelSmart.Models.TOUR
@{
    ViewBag.Title = "EditTour";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}


<h2>ĐIỀU CHỈNH THÔNG TIN TOUR</h2>

@using (Html.BeginForm("EditTour", "Tour", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-lg-1 col-md-2">Mã TOUR: </label>
        <div class="col-md-10">
            <input type="text" size="70" name="iMa_TOUR" value="@Model.Ma_TOUR" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên TOUR :</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTen_TOUR" value="@Model.Ten_TOUR" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ảnh MAIN :</label>
        <div class="col-md-10">
            <input type="file" name="fFileUpload" />
            <img src="~/Images/Tour/@Model.Anh_MAIN" width="120" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ảnh Bìa :</label>
        <div class="col-md-10">
            <input type="file" name="fFileUp" />
            <img src="~/Images/Tour/@Model.Anh_TOUR" width="120" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Lịch Trình :</label>
        <div class="col-md-10">
            <textarea name="sLich_Trinh"><p>@Model.Lich_Trinh.Replace("\n","</p><p>")</p></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Gía Tiền TOUR :</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="mGiaTien_TOUR"
                   value="@Model.GiaTien_TOUR" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Số Lượng vé:</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="iSoLuong"
                   value="@Model.SoLuong" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày Khởi Hành :</label>
        <div class="col-md-10">
            <input type="datetime" name="dNgayTOUR" required
                   value="@Convert.ToDateTime(Model.NgayTOUR)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa điểm khởi hành :</label>
        <div class="col-md-10">
            @Html.DropDownList("MaDD")
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Gian Liên Kết :</label>
        <div class="col-md-10">
            @Html.DropDownList("MaLK")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ", "IndexTour")
</div>
