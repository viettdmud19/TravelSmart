@model TravelSmart.Models.DIADIEM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN ĐỊA ĐIỂM</h2>

@using (Html.BeginForm("Edit", "DiaDiem", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-lg-1 col-md-2">Mã Địa điểm: </label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMa_DD" value="@Model.Ma_DD" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên Địa điểm :</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTen_DD" value="@Model.Ten_DD" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô Tả :</label>
            <div class="col-md-10">
                <textarea name="sMoTa_DD"><p>@Model.MoTa_DD.Replace("\n","</p><p>")</p></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh Bìa :</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                <img src="~/Images/@Model.ANH_DD" width="120" />
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ", "Index")
</div>

