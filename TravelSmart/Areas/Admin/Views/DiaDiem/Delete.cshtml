@model TravelSmart.Models.DIADIEM
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>

<h3>Bạn quyết định xóa địa điểm này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Địa điểm :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ten_DD)
        </dd>

        <dt>
            Mô Tả:
        </dt>

        <dd>
            @Html.Raw(Model.MoTa_DD.ToString().Replace("\n", "</p><p>"))
        </dd>

        <dt>
            Ảnh Bìa:
        </dt>

        <dd>
            <img src="~/Images/@Model.ANH_DD" alt="@Model.Ten_DD" />
        </dd>

       

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ ", "Index")
        </div>
    }
</div>

